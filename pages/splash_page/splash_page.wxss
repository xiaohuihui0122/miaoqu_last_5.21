/* pages/splash_page/splash_page.wxss */
 .splash_box{
  overflow: hidden;
  position:fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
 }
/* 背景图片*/
.splash_bg{
     position: absolute;
     top:0;
     left:0;
     width:100%;
     height:100%;
     overflow: hidden;
}
/* 时间结束后闪屏的变化 */
.splash_change {
    left:-100%;
    transition: left .2s linear;
}